<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.program.miraheka.aplikasidaftarmahasiswa.FormAddMahasiswa">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="138dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="27dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Font Mahasiswa"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/editNamaLengkap"
        android:layout_alignBottom="@+id/editNamaLengkap"
        android:layout_toLeftOf="@+id/editNamaLengkap"
        android:layout_toStartOf="@+id/editNamaLengkap"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <EditText
        android:id="@+id/editNamaLengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Nama Lengkap"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="NIM"
        android:layout_below="@+id/editNamaLengkap"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:id="@+id/editNIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NIM"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_below="@+id/editNamaLengkap"
        android:layout_alignLeft="@+id/editNamaLengkap"
        android:layout_alignStart="@+id/editNamaLengkap" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/editNIM"
        android:layout_marginTop="16dp"
        android:text="Alamat" />

    <EditText
        android:id="@+id/editAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Alamat"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/editNIM"
        android:layout_alignStart="@+id/editNIM" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Telepon"
        android:layout_alignBaseline="@+id/editNomorTelepon"
        android:layout_alignBottom="@+id/editNomorTelepon"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <EditText
        android:id="@+id/editNomorTelepon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nomor Telepon"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_below="@+id/editAlamat"
        android:layout_alignLeft="@+id/editAlamat"
        android:layout_alignStart="@+id/editAlamat" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_centerVertical="true"
        android:text="Jenis Kelamin" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editNomorTelepon"
        android:layout_alignStart="@+id/editNomorTelepon"
        android:layout_alignTop="@+id/textView12"
        android:id="@+id/radioGroup2" >

        <RadioButton
            android:id="@+id/radioPerempuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignTop="@+id/radioGroup2"
            android:layout_weight="1"
            android:text="Perempuan" />

        <RadioButton
            android:id="@+id/radioLakiLaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioPerempuan"
            android:layout_alignStart="@+id/radioPerempuan"
            android:layout_below="@+id/radioPerempuan"
            android:layout_weight="1"
            android:text="Laki-Laki" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonSimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_toEndOf="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:text="Simpan"
        android:textAllCaps="false"/>

</RelativeLayout>

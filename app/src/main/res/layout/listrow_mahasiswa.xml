<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/logoListRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageLogoListRow"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textNamaListRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageLogoListRow"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_toRightOf="@+id/imageLogoListRow"
        android:text="Nama"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textNIMListRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textNamaListRow"
        android:layout_alignStart="@+id/textNamaListRow"
        android:layout_below="@+id/textNamaListRow"
        android:layout_marginTop="12dp"
        android:text="NIM" />

</RelativeLayout>